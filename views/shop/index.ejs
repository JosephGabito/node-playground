<%- include('../includes/header') %>

    <header class="main-header">
        <%- include('../includes/navigation') %>
    </header>
    <main>
        <% if (prods.length > 0) { %>
            
            <div class="grid">
                
                <% for( let product of prods ) { %>

                    <% if ( product.title.length >= 1 ) { %>
                    <div class="card product-item">
                        <div class="product-item__title">
                            <h3><%=product.title%></h3>
                        </div>
                        <div class="product-item__thumbnail">
                            <img width="200" class="card__image" src="https://plus.unsplash.com/premium_photo-1664640733983-fd9fbfff25bf?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyNXx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=60" />
                        </div>
                        <div class="product-item__short-description">
                            <p>
                                The quick brown fox jump over the lazy dog near the bank of the river.
                            </p>
                        </div>
                        <div class="product-item__button">
                            <button>
                                Add to cart
                            </button>
                        </div>
                    </div>

                    <% } %>

                <% } %>

            </div>
            
        <% } else { %>
            <h1>No products found</h1>
        <% } %> 
    </main>
<%- include('../includes/footer') %>