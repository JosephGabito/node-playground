<%- include('../includes/header') %>

    <header class="main-header">
        <%- include('../includes/navigation') %>
        <div class="container mx-auto pt-6">
            <h3 class="font-serif font-semibold text-4xl">
                Admin section
            </h3>
        </div>
    </header>

    <main class="container mx-auto pt-6">

        <% if (prods.length > 0) { %>
            
            <div class="flex flex-wrap justify-center">
                
                <% for( let product of prods ) { %>

                    <% if ( product.title.length >= 1 ) { %>
                    <div class="card product-item  w-64  m-5">
                        <div class="product-item__thumbnail mb-3">
                            <a href="/products/<%=product._id%>">
                                <img width="200" class="card__image" src="<%=product.imageUrl%>" />
                            </a>
                        </div>
                        <div class="product-item__short-description mb-3 flex-1">
                            <p class="text-sm font-light text-slate-700">
                                <a href="/products/<%=product._id%>">
                                    <%=product.title%>
                                </a>
                            </p>
                        </div>
                        <div class="product-item__price  mb-3">
                            <p class="text-slate-900 font-light">
                                <a href="/products/<%=product._id%>">
                                    $<%=parseFloat(product.price).toFixed(2)%>
                                </a>
                            </p>
                        </div>
                        <div class="product-item__button flex items-center justify-between">
                            <div class="">
                                <a href="/products/<%=product._id%>" class="text-sm font-light">Details</a>
                            </div>
                            <div class="">
                                <a href="/admin/products/edit/<%=product.id%>" class="text-sm font-light">Edit</a> |
                                <a href="/admin/products/delete/<%=product.id%>" onClick="confirm('Are you sure you want to delete this product?')" class="text-sm font-light">Delete</a>
                            </div>
                        </div>
                    </div>

                    <% } %>

                <% } %>

            </div>
            
        <% } else { %>
            <h1>No products found</h1>
        <% } %> 
    </main>
<%- include('../includes/footer') %>